<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
  <%- include('common/navbar') %>
    <main>
      <br><br><br>
      <div class="form-box">
        <form id="join-game" action="/joinGame" method="post">
          <label for="RoomName">Lobby Name:</label>
          <input id="room" type="text" name="room" value="<%= room %>" />
          <label for="Password">Password:</label>
          <input pass="gamePass" type="password" id="password" name="password" />
          <input type="submit" value="Submit" style="background-color: red; width: 100%;" />
        </form>
      </div>
      <% if(error){ %>
        <div class="error-message">Error: <%= console.log(error) %>
        </div>
        <% } %>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/scripts/game.js"></script>
</body>

</html>